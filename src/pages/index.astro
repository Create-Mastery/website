---
import Layout from "../layouts/Layout-main.astro";
import LinksHero from "../components/links/Links-hero.astro";
import LinksHero2 from "../components/links/Links-hero-2.astro";
import Link from "../components/guide/Links.astro";
import Image from "../components/guide/Image.astro";
---

<Layout
  title="Home - Create Mastery"
  description="This is the home page of Create Mastery"
>
  <!------ HERO SECTION ------>
  <div
    class="flex flex-col text-center my-10 mx-auto justify-center items-center"
  >
    <h1 class="font-bold text-blue-300 text-5xl sm:text-7xl mb-4 select-none">
      <cite>Master the art of Create in Minecraft</cite>
    </h1>
    <h2 class="font-bold text-blue-300 text-xl sm:text-2xl select-none">
      <cite>Guides, modpacks, and tips for next-level creations</cite>
    </h2>
    <div class="flex flex-row gap-6">
      <LinksHero link="/guide/" text="GET STARTED" />
      <LinksHero2
        link="https://discord.gg/RVX6RRqkt5"
        text="JOIN THE COMMUNITY"
      />
    </div>
    <!-- IMAGE HERO -->
    <table
      class="w-auto h-1/4 border-2 border-blue-300 rounded-xl border-separate p-1 bg-stone-800"
    >
      <tr>
        <td>
          <img
            src="/assets/hero-section/image.png"
            alt="Create Art"
            class="rounded-lg"
          />
        </td>
      </tr>
      <tr>
        <td class="text-blue-300 font-bold pt-1 text-xl">
          <a
            href="https://www.youtube.com/watch?v=rR8W-f9YhYA"
            target="_blank"
            class="hover:underline select-none"
          >
            <cite>This is create.</cite>
          </a>
        </td>
      </tr>
    </table>
  </div>

  <!--
    SECTION 1 DISCORD
  -->
  <section class="xl:w-3/4 flex flex-col sm:flex-row mt-4 mb-6 gap-6">
    <div class="w-full sm:w-2/4 text-right">
      <h2 class="text-blue-300 text-3xl font-bold">Join our Discord!</h2>
      <p class="text-xl text-stone-300 mr-2">
        Be part of our community â€” share ideas, showcase your builds, and chat
        with other creators. Click below to join the fun ðŸ”¥
      </p>
    </div>
    <Image
      link="/assets/hero-section/discord-image.png"
      alt="Image discord"
      height="h-2/3"
    >
      <Link
        link="https://discord.gg/RVX6RRqkt5"
        text="JOIN THE DISCORD SERVER"
      />
    </Image>
  </section>

  <!--
    SECTION 2 GUIDE
  -->
  <section class="xl:w-3/4 flex flex-col-reverse sm:flex-row mt-6 gap-6">
    <Image
      link="/assets/hero-section/discord-image.png"
      alt="Image discord"
      height="h-64"
    >
      <Link
        link="https://discord.gg/RVX6RRqkt5"
        text="JOIN THE DISCORD SERVER"
      />
    </Image>

    <div class="w-full sm:w-2/4 text-left">
      <h2 class="text-blue-300 text-3xl font-bold">Join our Discord!</h2>
      <p class="text-xl text-stone-300 ml-2">
        Be part of our community â€” share ideas, showcase your builds, and chat
        with other creators. Click below to join the fun ðŸ”¥
      </p>
    </div>
  </section>
</Layout>
