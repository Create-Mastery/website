---
import Layout from "../layouts/Layout-main.astro";
import LinksHero from "../components/Links-hero.astro";
import LinksHero2 from "../components/Links-hero-2.astro";
---

<Layout title="Home - Create Mastery">
    <div
        class="flex flex-col text-center mt-10 mx-auto justify-center items-center"
    >
        <h1 class="font-bold text-blue-300 text-7xl mb-4">
            <q><cite>Master the art of Create in Minecraft</cite></q>
        </h1>
        <h2 class="font-bold text-blue-300 text-2xl">
            <cite>Guides, modpacks, and tips for next-level creations</cite>
        </h2>
        <div class="flex flex-row gap-7">
            <LinksHero link="/guide" text="GET STARTED" />
            <LinksHero2
                link="https://discord.gg/RVX6RRqkt5"
                text="JOIN THE COMMUNITY"
            />
        </div>
        <img
            src="/src/assets/hero-section/image.png"
            alt="Create Art"
            class="w-auto h-1/4 border border-blue-300 rounded-lg"
        />
    </div>
</Layout>
