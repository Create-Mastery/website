---
import "../styles/global.css";
const { link, text } = Astro.props;
---

<a
    href={link}
    target="_blank"
    class="bg-blue-300 text-stone-900 rounded font-bold w-fit px-4 my-6 text-xl sm:text-2xl py-2 border-2 border-blue-300 hover:bg-stone-900 hover:text-blue-300 transition duration-300 select-none"
    ><h2>{text}</h2></a
>
