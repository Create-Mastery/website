---
import "../styles/global.css";
import LinksFooter from "../components/links/Links-footer.astro";
import SideBarEntryNode from "../components/guide/Side-bar-entry-node.astro";
import SideBarEntryNodeInternal from "../components/guide/Side-bar-entry-node-internal.astro";
import SideBarEntry from "../components/guide/Side-bar-entry.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <script
            src="https://kit.fontawesome.com/f0be53b175.js"
            crossorigin="anonymous"></script>
        <title>{Astro.props.title}</title>
    </head>
    <body class="bg-stone-900 flex flex-col min-h-screen">
        <header class="p-0 m-0 h-fit items-center justify-center flex relative">
            <div
                class="bg-blue-300 flex sm:flex-row w-full px-7 py-4 gap-5 sm:justify-between justify-center items-center flex-col"
            >
                <span
                    class="sm:text-3xl text-4xl font-bold text-stone-900 select-none whitespace-nowrap"
                    >CREATE MASTERY</span
                >
                <div class="gap-7 flex flex-row select-none">
                    <a
                        href="/"
                        class="text-stone-900 text-2xl font-bold hover:underline"
                        target="_blank"
                    >
                        HOME
                    </a>
                    <a
                        href="/"
                        target="_blank"
                        class="text-stone-900 text-2xl font-bold hover:underline"
                    >
                        SCSDC
                    </a>
                    <a
                        href="https://github.com/Create-Mastery"
                        target="_blank"
                        class="text-stone-900 text-2xl font-bold hover:underline"
                    >
                        GITHUB
                    </a>
                </div>
            </div>
        </header>
        <main class="flex flex-grow">
            <!----------- MAIN ----------->
            <div class="w-md bg-stone-800 hidden lg:flex">
                <div class="flex flex-col gap-2 p-3 w-full">
                    <SideBarEntry>
                        <a href="/guide">INTRODUCTION</a>
                    </SideBarEntry>
                    <SideBarEntryNode title="1. KINETIC ENERGY" id="1">
                        <SideBarEntry>
                            <a href="/guide/kinetic-energy-intro">
                                1.1 WHAT IS KINETIC ENERGY?
                            </a>
                        </SideBarEntry>
                        <SideBarEntryNodeInternal
                            title="1.1.1 KINETIC ENERGY GENERATORS"
                            id="2"
                        >
                            <SideBarEntry>
                                <a href="/guide/steam-engine">
                                    1.1.1 STEAM ENGINE
                                </a>
                            </SideBarEntry>
                        </SideBarEntryNodeInternal>
                    </SideBarEntryNode>
                </div>
            </div>
            <div>
                <div class="mx-5 my-2.5 xl:w-5xl">
                    <slot />
                </div>
            </div>
        </main>
        <footer
            class="p-0 m-0 h-fit items-center justify-center flex flex-col relative"
        >
            <!----------- FOOTER ----------->
            <div
                class="flex items-center justify-center bg-blue-200 w-full py-2"
            >
                <ul class="flex-row flex gap-4">
                    <li>
                        <a href="https://discord.gg/RVX6RRqkt5" target="_blank">
                            <i class="fa-brands fa-discord fa-xl text-stone-900"
                            ></i>
                        </a>
                    </li>
                    <li>
                        <a
                            href="https://github.com/Create-Mastery"
                            target="_blank"
                        >
                            <i class="fa-brands fa-github fa-xl text-stone-900"
                            ></i>
                        </a>
                    </li>
                </ul>
            </div>

            <div
                class="bg-blue-300 w-full py-4 flex justify-center items-center gap-12 flex-col md:flex-row md:gap-28 lg:gap-44 xl:gap-72"
            >
                <div
                    class="flex flex-col text-stone-900 items-center justify-center"
                >
                    <h1 class="text-stone-900 select-none font-bold text-3xl">
                        OTHER GUIDES
                    </h1>
                    <hr class="text-stone-900 h-2 w-full" />
                    <LinksFooter link="/" text="THE BEST COMPLEMENTARY MODS" />
                    <LinksFooter link="/" text="ADD-ONS" />
                </div>

                <div
                    class="flex flex-col text-stone-900 items-center justify-center"
                >
                    <h1 class="text-stone-900 select-none font-bold text-3xl">
                        CONTACT
                    </h1>
                    <hr class="text-stone-900 h-2 w-full" />
                    <LinksFooter
                        link="mailto: info@createmastery.org"
                        text="INFO: info@createmastery.org"
                    />
                    <LinksFooter link="/" text="ABOUT US" />
                </div>
            </div>
            <div
                class="bg-blue-300 w-full py-2 flex justify-center items-center flex-row"
            >
                <h2 class="text-stone-900 text-lg sm:text-xl">
                    Made with&#10084;by Create Mastery - Source code:
                    <a
                        href="https://github.com/Create-Mastery/website-new"
                        target="_blank"
                        class="text-stone-900 font-bold hover:underline"
                        >Github</a
                    >
                </h2>
            </div>
        </footer>

        <script type="module" src="/src/scripts/sidebar/init.ts"></script>
    </body>
</html>
