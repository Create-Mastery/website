---
import "../styles/global.css";
import Links from "../components/Links.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <title>{Astro.props.title}</title>
    </head>
    <body class="bg-stone-900 flex flex-col min-h-screen">
        <header
            class="bg-blue-300 py-4 m-0 h-fit items-center justify-center flex"
        >
            <nav
                class="flex flex-col md:flex-row w-full justify-between mx-14 gap-5 md:gap-0"
            >
                <div class="items-center justify-center flex gap-6">
                    <a
                        href="https://www.curseforge.com/minecraft/mc-mods/create"
                        target="_blank"
                        class="hidden md:block"
                    >
                        <img
                            src="/src/assets/create-logo.png"
                            alt="logo-create"
                            class="size-36 select-none object-contain"
                        />
                    </a>
                    <h1
                        class="text-6xl font-bold text-stone-900 select-none text-center md:text-left"
                    >
                        CREATE MASTERY
                    </h1>
                </div>
                <div class="items-center justify-center flex">
                    <Links link="https://github.com" text="TEST" />
                </div>
            </nav>
        </header>
        <main class="flex-grow"></main>
        <footer class=""></footer>
    </body>
</html>
